<Window x:Class="StudentsForm.ExpelledStudentsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Управление отчисленными студентами" Height="400" Width="600"
        WindowStartupLocation="CenterOwner">
    <DockPanel>
        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" 
                   HorizontalAlignment="Center" Margin="10">
            <Button Content="Восстановить выделенных" Click="RestoreSelected_Click" 
                   Margin="5" Padding="10,3"/>
            <Button Content="Удалить выделенных" Click="DeleteSelected_Click" 
                   Margin="5" Padding="10,3" Background="LightCoral"/>
            <Button Content="Закрыть" Click="CloseWindow_Click" 
                   Margin="5" Padding="10,3"/>
        </StackPanel>

        <DataGrid x:Name="dgExpelledStudents" AutoGenerateColumns="False" 
                 SelectionMode="Extended" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn Header="Выбрать" Binding="{Binding IsSelected}"/>
                <DataGridTextColumn Header="ФИО" Binding="{Binding FullName}" Width="*"/>
                <DataGridTextColumn Header="Группа" Binding="{Binding Group}" Width="100"/>
                <DataGridTextColumn Header="Предмет" Binding="{Binding Subject}" Width="*"/>
                <DataGridTextColumn Header="Оценка" Binding="{Binding Grade}" Width="80"/>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>