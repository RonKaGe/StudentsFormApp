<Window x:Class="StudentsForm.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Менеджер студентов" Height="600" Width="900"
        WindowStartupLocation="CenterScreen">

    <Window.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="3"/>
        </Style>
        <Style TargetType="Button">
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Padding" Value="8,3"/>
        </Style>
        <Style TargetType="CheckBox">
            <Setter Property="Margin" Value="5,2"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
        <Style TargetType="Label">
            <Setter Property="Margin" Value="5,2"/>
            <Setter Property="VerticalAlignment" Value="Center"/>
        </Style>
    </Window.Resources>

    <DockPanel>
        <!-- Меню -->
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="Файл">
                <MenuItem Header="Сохранить" Name="menuSave" Click="SaveData_Click"/>
                <MenuItem Header="Загрузить" Name="menuLoad" Click="LoadData_Click"/>
                <Separator/>
                <MenuItem Header="Выход" Name="menuExit" Click="ExitApp_Click"/>
            </MenuItem>
            <MenuItem Header="Студенты">
                <MenuItem Header="Новый" Name="menuNew" Click="AddNewStudent_Click"/>
                <MenuItem Header="Удалить" Name="menuDelete" Click="DeleteCurrentStudent_Click"/>
                <MenuItem Header="Отчислить" Name="menuExpel" Click="ExpelCurrentStudent_Click"/>
            </MenuItem>
            <MenuItem Header="Справка">
                <MenuItem Header="О программе" Name="menuAbout" Click="ShowAbout_Click"/>
            </MenuItem>
        </Menu>

        <!-- Основной контент -->
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <!-- Левая часть - карточка студента -->
            <GroupBox Grid.Column="0" Header="Карточка студента" Margin="10">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>

                    <!-- ФИО -->
                    <Label Grid.Row="0" Grid.Column="0" Content="ФИО:"/>
                    <TextBox Grid.Row="0" Grid.Column="1" Name="txtFullName"/>

                    <!-- Группа -->
                    <Label Grid.Row="1" Grid.Column="0" Content="Группа:"/>
                    <TextBox Grid.Row="1" Grid.Column="1" Name="txtGroup"/>

                    <!-- Предмет -->
                    <Label Grid.Row="2" Grid.Column="0" Content="Предмет:"/>
                    <TextBox Grid.Row="2" Grid.Column="1" Name="txtSubject"/>

                    <!-- Оценка -->
                    <Label Grid.Row="3" Grid.Column="0" Content="Оценка:"/>
                    <TextBox Grid.Row="3" Grid.Column="1" Name="txtGrade"/>

                    <!-- Статус -->
                    <Label Grid.Row="4" Grid.Column="0" Content="Статус:"/>
                    <TextBlock Grid.Row="4" Grid.Column="1" Name="txtStatus" 
                              Margin="5" VerticalAlignment="Center" Text="Активный"/>

                    <!-- Навигация -->
                    <StackPanel Grid.Row="6" Grid.Column="0" Grid.ColumnSpan="2" 
                               Orientation="Horizontal" HorizontalAlignment="Center">
                        <Button Content="|◄" Name="btnFirst" ToolTip="Первый студент"/>
                        <Button Content="◄" Name="btnPrev" ToolTip="Предыдущий студент"/>
                        <TextBlock Name="txtPosition" Margin="10,0" VerticalAlignment="Center" 
                                  Text="0/0"/>
                        <Button Content="►" Name="btnNext" ToolTip="Следующий студент"/>
                        <Button Content="►|" Name="btnLast" ToolTip="Последний студент"/>
                    </StackPanel>
                </Grid>
            </GroupBox>

            <!-- Правая часть - настройки и управление -->
            <StackPanel Grid.Column="1" Width="300" Margin="0,10,10,10">

                <!-- Настройки файлов -->
                <GroupBox Header="Настройки файлов" Margin="0,0,0,10">
                    <StackPanel>
                        <Label Content="Входной файл:"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Name="txtInputPath" 
                                    Text="students.dat" IsReadOnly="True"/>
                            <Button Grid.Column="1" Content="..." Name="btnInputBrowse" 
                                   Width="30"/>
                        </Grid>

                        <Label Content="Выходной файл:"/>
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <TextBox Grid.Column="0" Name="txtOutputPath" 
                                    Text="students.dat" IsReadOnly="True"/>
                            <Button Grid.Column="1" Content="..." Name="btnOutputBrowse" 
                                   Width="30"/>
                        </Grid>
                    </StackPanel>
                </GroupBox>

                <!-- Настройки программы -->
                <GroupBox Header="Настройки программы" Margin="0,0,0,10">
                    <StackPanel>
                        <CheckBox Name="chkSaveState" Content="Сохранять состояние при выходе"/>
                        <CheckBox Name="chkCycleNavigation" Content="Циклическая навигация"/>
                        <CheckBox Name="chkAllowDuplicateNames" Content="Разрешить дубликаты фамилий"/>
                        <CheckBox Name="chkShowExpelled" Content="Показывать отчисленных"/>
                    </StackPanel>
                </GroupBox>

                <!-- Управление -->
                <GroupBox Header="Управление">
                    <UniformGrid Columns="2">
                        <Button Content="Новый" Name="btnNew" Background="LightGreen"/>
                        <Button Content="Сохранить" Name="btnSave" Background="LightBlue"/>
                        <Button Content="Очистить" Name="btnClear" Background="LightYellow"/>
                        <Button Content="Отчислить" Name="btnExpel" Background="LightCoral"/>
                        <Button Content="Управление отчисленными" Name="btnManageExpelled" 
                               Grid.ColumnSpan="2" Background="LightGray"/>
                    </UniformGrid>
                </GroupBox>

                <!-- Статус -->
                <Border BorderBrush="Gray" BorderThickness="1" Margin="0,10,0,0" 
                       Background="WhiteSmoke">
                    <TextBlock Name="txtStatusBar" Margin="5" Text="Готов к работе" 
                              TextWrapping="Wrap"/>
                </Border>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>